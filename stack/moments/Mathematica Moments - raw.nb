Cell[BoxData[
 RowBox[{"LogLinearPlot", "[", 
  RowBox[{
   RowBox[{"Pk", "[", "k", "]"}], ",", 
   RowBox[{"{", 
    RowBox[{"k", ",", "kmin", ",", "kmax"}], "}"}], ",", 
   RowBox[{"PlotRange", "\[Rule]", "All"}]}], "]"}]], "Input",
